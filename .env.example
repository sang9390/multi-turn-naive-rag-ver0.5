# Server
HOST=0.0.0.0
PORT=8001
MAX_CONCURRENCY=32
REQUEST_TIMEOUT_SEC=120

# Generation
GENERATOR_PROVIDER=sglang
LLM_MODEL=Qwen/Qwen3-8B-Instruct
SGLANG_LLM_BASE_URL=http://localhost:30000/v1
SGLANG_LLM_API_KEY=sk-test
GEN_TIMEOUT_SEC=600
GEN_NUM_CTX=8192
GEN_TEMPERATURE=0.2
GEN_MAX_OUTPUT_TOKENS=8192
IS_CHAT_MODEL=true
ENABLE_THINKING=off
SEPARATE_REASONING=true
STREAM_DEFAULT=true

# Embedding
EMBED_PROVIDER=sglang
EMBED_MODEL=Qwen/Qwen3-Embedding-0.6B
SGLANG_EMBED_BASE_URL=http://localhost:30001/v1
SGLANG_EMBED_API_KEY=sk-test
EMBED_BATCH_SIZE=8
EMBED_INPUT_TOKEN_LIMIT=8192
EMBED_DIM=1024

# Retrieval / Index
SIMILARITY_TOP_K=5
BM25_TOP_K=8
SIMILARITY_CUTOFF=0.25
VECTOR_STORE_DIR=./data/vector_store
FAISS_SAVE_DIR=./data/faiss
FAISS_LOAD_DIR=./data/faiss

# Chunking
MD_KEEP_CODEBLOCKS=true
SEMANTIC_SPLIT_ALL=true
SEMANTIC_TARGET_CHARS=1200
SEMANTIC_BREAKPOINT_PERCENTILE=95
MAX_NODE_CHARS=4096
CTX_CHARS_PER_NODE=900
CTX_MAX_TOTAL_CHARS=6000

# Page split (md/txt only)
PAGE_SPLIT_ENABLE=false
PAGE_SPLIT_APPLIES_TO=md,txt
PAGE_SPLIT_MODE=symbol
PAGE_SPLIT_SYMBOL_TEMPLATE=- {n} -
PAGE_SPLIT_MIN_N=1
PAGE_SPLIT_MAX_N=1000000
PAGE_SPLIT_TRIM_WHITESPACE=true
PAGE_SPLIT_REGEX=
PAGE_SPLIT_REQUIRE_MONOTONIC=true
PAGE_SPLIT_RESET_ON_FILE=true
PAGE_SPLIT_INCLUDE_MARKER=false
PAGE_SPLIT_MAX_PAGES_PER_FILE=100000

GOOGLE_API_KEY=


# Session Management
SESSION_CACHE_DIR=./cache/session
SESSION_MAX_COUNT=100
SESSION_TTL_HOURS=72
RECENT_QA_WINDOW=5

# Query Repair (Multihop) - 기존 LLM_MODEL 재사용
ENABLE_QUERY_REPAIR=true
REPAIR_MAX_TOKENS=800
REPAIR_TEMPERATURE=0.3

# Summarization - 기존 LLM_MODEL 재사용
SUMMARY_MAX_TOKENS=600
